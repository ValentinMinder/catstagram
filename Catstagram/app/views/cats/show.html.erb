<div class="panel panel-primary">
  <div class="panel-heading">
    <div class="pull-right">
      <br>
      <% if user_signed_in? and (current_user == @cat.user or current_user.is_admin?)%>
        <%= link_to "Edit", edit_cat_path(@cat), :class => "btn btn-warning" %>
        <%= link_to 'Delete', @cat, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
      <% end %>
    </div>
    <h1><%= @cat.catname %></h1>
  </div>
  <div class="panel-body">
    <% unless @cat.description.blank? %>
      <blockquote>
        <p><%= @cat.description %></p>
      </blockquote>
    <% end %>
    <% unless @cat.city.blank? %>
      <strong>From</strong> <%= @cat.city %><br>
    <% end %>
    <% if @cat.user %>
      <strong>Belongs to</strong> <%= link_to @cat.user.username, @cat.user %><br>
    <% else %>
      <strong>Ownerless</strong><br>
    <% end %>
    <% if @cat.birth_time %>
      <strong>Birth date </strong> <%= @cat.birth_time %>
    <% end %>
    <%= render 'photos/grid' %>
  </div>
</div>
