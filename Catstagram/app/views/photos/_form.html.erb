<%= form_for @photo, :html => {:class => "form-horizontal"} do |f| %>
  <% if @photo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@photo.errors.count, "error") %> prohibited this photo from being saved:</h2>

      <ul>
      <% @photo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well bs-component">
    <fieldset>
      <div class="form-group">
        <% if f.object.image_url? %>
          <div class="col-lg-2" control-label>
            <center>
              <%= image_tag f.object.image_url.thumb.url %>
            </center>
          </div>
        <% else %>
          <%= f.label :image_url, :class => "col-lg-2 control-label" %>
        <% end %>
        <div class="col-lg-10">
          <%= f.file_field :image_url %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Cats on photo", :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.collection_select :cat_ids, Cat.all, :id, :catname, {}, {:multiple => true, :class => "form-control"} %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :caption, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :caption, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "Tags", :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <div id="tags">
            <% if @photo.new_record? %>
              <%= render 'tag_input' %>
            <% end %>
          </div>
          <a href="javascript:;", id="addTag">Add Tag</a>
        </div>
      </div>

      <div class="form-group actions">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit "Publish Photo", :class => "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  </div>













  <div class="field">
    <% if f.object.image_url? %>
      <%= image_tag f.object.image_url %><br>
    <% else %>
      <%= f.label :image_url %><br>
    <% end %>
    <%= f.file_field :image_url %>
  </div>
  <i>^ to be replaced with upload button!</i><br><br>

  <div class="field">
    <%= f.label 'Cats on photo' %><br>
    <%= f.collection_select :cat_ids, Cat.all, :id, :catname, {}, {:multiple => true} %>
  </div>

  <div class="field">
    <%= f.label :caption %><br>
    <%= f.text_area :caption %>
  </div>

  <div class="field">
    <%= f.label 'Tags' %><br>
    <div id="tags">
    <% if @photo.new_record? %>
        <%= render 'tag_input' %>
    <% else %>
      <% @photo.hashtags.each do |tag| %>
        <!-- <%= render 'tag_input', asdf: "edit" %> -->
        <%= render 'tag_input' %>
      <% end %>
    <% end %>
    </div>
    <a href="javascript:;" id="addTag">Add Tag</a>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<div style="display: none;" id="new_tag_form">
  <%= render partial: 'tag_input', locals: {hashtag: false} %>
</div>
