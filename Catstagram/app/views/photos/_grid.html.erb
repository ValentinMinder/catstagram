<p>
  <!-- can be linked with #photos -->
  <h3 id="photos"><%= @title + "(" + @item.photos.count.to_s + ")" %>:</h3>
  <ul>
    <% unless @item.photos.any? %>
      No photos yet!
    <% end %>
    <% @item.photos.each do |photo| %>
      <li><%= link_to(image_tag(photo.image_url.thumb.url), photo) %>
    <% end %>
  </ul>
</p>