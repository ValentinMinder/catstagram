<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Listing Photos</h1>

  <table class="table table-striped table-hover">
    <tbody>
      <% @photos.each_slice(8) do |photos| %>
        <tr>
          <% photos.each do |photo| %>
            <td><center>
              <%= link_to photo do %>
                <%= image_tag photo.image_url.thumb.url %><br>
                <%= photo.view_count %> &#664;
                <%= photo.like_count %> &#9829;
              <% end %>
            </center></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>




  <table>
    <thead>
      <tr>
        <th>Image</th>
        <th>Caption</th>
        <th>View count</th>
        <th>Like count</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @photos.each do |photo| %>
        <tr>
          <td><%= image_tag photo.image_url.thumb.url %></td>
          <td><%= photo.caption %></td>
          <td><%= photo.view_count %></td>
          <td><%= photo.like_count %></td>
          <td><%= link_to 'Show', photo %></td>
          <td><%= link_to 'Edit', edit_photo_path(photo) %></td>
          <td><%= link_to 'Destroy', photo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Photo', new_photo_path %>
</div>
