<%= form_for @user, :html => {:class => "form-horizontal"} do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-dismissible alert-danger" id="error_explanation">
      <button type="button" class="close" data-dismiss="alert">&times;</button>
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="well bs-component">
    <fieldset>
      <div class="form-group">
        <% if f.object.avatar_url? %>
          <div class="col-lg-2" control-label>
            <center>
              <%= image_tag f.object.avatar_url.thumb.url %>
            </center>
          </div>
        <% else %>
          <%= f.label :avatar, :class => "col-lg-2 control-label" %>
        <% end %>
        <div class="col-lg-10">
          <%= f.file_field :avatar_url %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :username, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_field :username, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label :biography, :class => "col-lg-2 control-label" %>
        <div class="col-lg-10">
          <%= f.text_area :biography, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group actions">
        <div class="col-lg-10 col-lg-offset-2">
          <%= f.submit @user.new_record? ? "Create User" : "Edit User", :class => "btn btn-primary" %>
        </div>
      </div>
    </fieldset>
  </div>
<% end %>
